{
  "name": "ping-coming-soon-page",
  "version": "1.0.0",
  "description": "Frontend Mentor - Ping coming soon page solution",
  "default": "index.html",
  "scripts": {
    "start": "parcel index.html",
    "build": "parcel build index.html --dist-dir ./dist",
    "predeploy": "rd /s dist && parcel build index.html --no-source-maps --public-url /ping-coming-soon-page/",
    "deploy": "gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateusbelicio/ping-coming-soon-page.git"
  },
  "author": "Mateus Belicio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mateusbelicio/ping-coming-soon-page/issues"
  },
  "homepage": "https://github.com/mateusbelicio/ping-coming-soon-page",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.8.2",
    "gh-pages": "^4.0.0",
    "parcel": "^2.8.2",
    "sass": "^1.57.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.1"
  }
}
